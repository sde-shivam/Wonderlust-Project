<% layout("/layouts/boilerplate") %>
    <div class="row mt-4">
        <h1 class="col-6 offset-3">Login</h1>
        <div class="col-6 offset-3 mb-4">
            <form action="/login" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <lable for="username" class="form-label">Username</lable>
                    <input name="username" type="text" id="username" class="form-control" required />
                </div>
                <div class="mb-3">
                    <lable for="password" class="form-label">password</lable>
                    <input name="password" type="password" id="password" class="form-control" required />
                </div>
                <button class="btn btn-success">Login</button>
            </form>
        </div>
    </div>